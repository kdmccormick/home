#!/usr/bin/env bash

set -e
set -o pipefail
set -u

# Default settings.
export KS_USER=kyle
export KS_DIST=xubuntu20
export KS_PROFILE=self
export KS_EMAIL=kdmc@pm.me

# These settings must be set, but purposefully have no defaults.
unset KS_SSH_PASSPHRASE

# Load up local settings if we have them.
if [ -f ~/.ksettings_local ]; then
	. ~/.ksettings_local
fi

# Environment = user x profile x distribution
export KS_ENV="${KS_USER}-${KS_PROFILE}-${KS_DIST}"
export KS_ROOT_ENV="root-${KS_PROFILE}-${KS_DIST}"
